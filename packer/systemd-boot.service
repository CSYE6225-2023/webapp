[Unit]
Description=My Webapp Cloud Application
ConditionPathExists=/opt/webapp/server.js
After=network.target

[Service]
Type=simple
User=csye6225
Group=csye6225
WorkingDirectory=/opt/webapp
ExecStart=/usr/bin/node /opt/webapp/server.js
Restart=always
RestartSec=10

[Install]
WantedBy=cloud-init.target